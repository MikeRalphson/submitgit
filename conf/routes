# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                                             controllers.Application.index()
GET         /oauth/callback                               controllers.Application.oauthCallback(code: String)
GET         /$repoId<.*/.*>/pulls                         controllers.Application.listPullRequests(repoId: lib.github.RepoName)
GET         /$prId<.*/.*/pull/.*>                         controllers.Application.reviewPullRequest(prId: PullRequestId)
POST        /$prId<.*/.*/pull/.*>/:submitType             controllers.Application.mailPullRequest(prId: PullRequestId, submitType: MailType)
GET         /$prId<.*/.*/pull/.*>/:headCommit/:sig        controllers.Application.acknowledgePreview(prId: PullRequestId, headCommit: ObjectId, sig: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                 controllers.Assets.at(path="/public", file)
